<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" href="/">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/tasks/new">Add Task</a>
    </li>
    <li class="nav-item" class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Category Menu <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            {{#if categories}}
                {{#each categories}}
                    <li><a class="dropdown-item" href="/categories/{{id}}">{{name}}</a></li>
                {{/each}}
                <li><a class="btn btn-primary dropdown-item" href="/categories/new">Add Category</a></li>

