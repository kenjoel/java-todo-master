{{#partial "content"}}

    <div class="row">
        <div class="col-md-7">
            <h1> List o' stuff to do!</h1>
            {{#if tasks}}
                {{#each tasks }}
                        <p><a href="/categories/{{categoryId}}/tasks/{{id}}">{{description}}</a></p>
                {{/each}}
            {{else}}
                    <p>No tasks!</p>
            {{/if}}
            <p style="margin-bottom: 0px" class="text-white text-center">
                <a class="btn btn-danger" href="/tasks/delete">delete all tasks</a>
            </p>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}